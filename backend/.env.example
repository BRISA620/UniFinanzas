# Flask Configuration
FLASK_APP=wsgi.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/unifinanzas

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# File Storage (S3 Compatible - MinIO for development)
S3_BUCKET=unifinanzas-attachments
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1
UPLOAD_FOLDER=/tmp/unifinanzas/uploads

# Redis
REDIS_URL=redis://localhost:6379/0

# Task Queue (in-process)
TASK_QUEUE_MAX_WORKERS=4
TASK_QUEUE_SCHEDULER_ENABLED=true
TASK_QUEUE_TIMEZONE=America/Lima

# Brevo Email
BREVO_API_KEY=your-brevo-api-key
BREVO_FROM_EMAIL=rocioangelicachambi@gmail.com
BREVO_FROM_NAME=UniFinanzas

# Firebase Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key

# PDF Generation
PDF_TEMP_DIR=/tmp/unifinanzas/pdfs
